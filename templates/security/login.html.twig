{% extends "base.html.twig" %}

{% block title %}

{% endblock %}

{% block body %}
 <h1 class="display-4 text-center my-5">Identifier vous....</h1>

   {% for message in app.flashes('success') %}
      <div class="col-md-5 bg-success p-4 rounded mx-auto text-center text-white mb-3">
         {{ message }}
      </div>

   {% endfor %}

   {% if error %} {# 2 #}
        
         <div  class="col-md-3 bg-danger p-4 rounded mx-auto text-center text-white mb-3">
         {{ error.messageKey|trans(error.messageData,'security')}} {# 3 #}
         {# trans(error.messageData, 'security') : permet de pointer sur le fichier 'translations/security.en.php' qui contient la personnalisation des messages utilisateurs par d√©faut de Symfony #}
         </div>

   {% endif %}
  <form method="post" class="col-md-4 mx-auto" action="{{ path('security_login') }}">
  <div class="form-group">
    <label for="_username">Email </label>
    <input type="text" class="form-control" id="_username" name="_username" value="{{ lastUsername }}"> {# 1 #}
  </div>
  <div class="form-group">
    <label for="_password">Password</label>
    <input type="password" class="form-control" id="_password" name="_password">
  </div>
  
  <button type="submit" class="btn btn-primary">Continuez</button>
</form> 
{% endblock %}