{% block title %}
    Créer votre compte
{% endblock %}


{% block body %}

<h1 class="display-4 text-center my-5">créer votre compte </h1>

{{ form_start(formRegistration,{'attr':{'class':'col-md-4 mx-auto'}})}} {# 4 #}

